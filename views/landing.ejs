    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    
    <div id="landing-header">
 		<h1>Welcome to ThrillHunter</h1>
		<a href="/rollercoasters" id="start" style="display:none" class="btn btn-lg btn-success">View All Roller Coasters</a>
    </div>
    
