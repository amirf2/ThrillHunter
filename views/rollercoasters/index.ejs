<%- include("../partials/header") %>
 <div class="container">
     <header class="jumbotron">
         <div class="container text-center">
             <h1>Welcome To ThrillHunter!</h1>
			 <p><img class="" src="https://i.imgur.com/FwtLNuO.gif" height=150 width=300 style="background-color:transparent;"/></p>
			 
             <p>For Those Who Love The Adrenaline Rush <span class="fas fa-heartbeat"></span> </p>
         </div>
     </header>
     
     <!-- <div class="row text-center" style="display:flex; flex-wrap: wrap;"> -->
	<div class="row text-center">
		 <% rollerCoasters.forEach(function(rollerCoaster){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
				<div class="card rollerCoasterList">
				<!-- <div class="card rollerCoasterList" style="background-color: #eee;"> -->
					 <a href="<%= rollerCoaster.image %>"><img class="card-img-top" src="<%= rollerCoaster.image %>" alt="<%= rollerCoaster.name %>"></a>
					 <div class="card-body">
					 <!-- <div class="card-body" style="color: black;"> -->
						<h5 class="card-title"><strong><%= rollerCoaster.name %></strong></h5>
						 <hr>
						 <div class="card-text"> 
							 <div>
								<i class="fas fa-map-marker-alt location-margin" title="Park Name"></i>
								 <%= rollerCoaster.location.park %>
							</div>
							<div class="text-capitalize">  
								<i class="fas fa-globe-americas location-margin" title="Country"></i>
								<%= rollerCoaster.location.country %>
							</div>
						<hr>
						 <a class="btn btn-primary" href="/rollercoasters/<%= rollerCoaster._id %>">More Info</a>			   
					 	</div>
					 </div>
				</div>	
        	</div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") %>